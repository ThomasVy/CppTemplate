{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "${sourceDir}/cmake/WindowsToolchain/Windows.MSVC.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CONAN_HOST_PROFILE": "${sourceDir}/profiles/windows_profile",
        "CONAN_BUILD_PROFILE": "${sourceDir}/profiles/windows_profile",
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/cmake-conan/conan_provider.cmake"
      }
    },
    {
      "name": "debug",
      "inherits": ["default"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": ["default"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }

  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ],
  "packagePresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "displayName": "debug Zip Package",
      "generators": [
        "ZIP"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug"
        },
        {
          "type": "test",
          "name": "debug"
        },
        {
          "type": "package",
          "name": "debug"
        }
      ]
    }
  ]
}
