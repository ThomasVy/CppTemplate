{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27
  },
  "configurePresets": [
    {
      "name": "windows",
      "hidden": true,
      "toolchainFile": "${sourceDir}/cmake/WindowsToolchain/Windows.MSVC.toolchain.cmake",
      "cacheVariables": {
        "CONAN_HOST_PROFILE": "${sourceDir}/profiles/windows_profile",
        "CONAN_BUILD_PROFILE": "${sourceDir}/profiles/windows_profile"
      }
    },
    {
      "name": "linux",
      "hidden": true,
      "cacheVariables": {
        "CONAN_HOST_PROFILE": "${sourceDir}/profiles/linux_profile",
        "CONAN_BUILD_PROFILE": "${sourceDir}/profiles/linux_profile"
      }
    },
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/cmake-conan/conan_provider.cmake"
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug-windows",
      "inherits": ["default", "windows", "debug"]
    },
    {
      "name": "release-windows",
      "inherits": ["default", "windows", "release"]
    },
    {
      "name": "debug-linux",
      "inherits": ["default", "linux", "debug"]
    },
    {
      "name": "release-linux",
      "inherits": ["default", "linux", "release"]
    }
  ],
  "buildPresets": [
    {
      "name": "release-windows",
      "configurePreset": "release-windows"
    },
    {
      "name": "debug-windows",
      "configurePreset": "debug-windows"
    },
    {
      "name": "release-linux",
      "configurePreset": "release-linux"
    },
    {
      "name": "debug-linux",
      "configurePreset": "debug-linux"
    }
  ],
  "testPresets": [
    {
      "name": "debug-windows",
      "configurePreset": "debug-windows",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ],
  "packagePresets": [
    {
      "name": "debug-windows",
      "configurePreset": "debug-windows",
      "displayName": "debug-windows Zip Package",
      "generators": ["ZIP"]
    }
  ],
  "workflowPresets": [
    {
      "name": "debug-windows",
      "steps": [
        {
          "type": "configure",
          "name": "debug-windows"
        },
        {
          "type": "build",
          "name": "debug-windows"
        },
        {
          "type": "test",
          "name": "debug-windows"
        },
        {
          "type": "package",
          "name": "debug-windows"
        }
      ]
    }
  ]
}
