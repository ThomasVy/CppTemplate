{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27
  },
  "configurePresets": [
    {
      "name": "ConfigBase",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "ConfigDefault",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "inherits": "ConfigBase",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "BuildDefault",
      "configurePreset": "ConfigDefault"
    }
  ],
  "testPresets": [
    {
      "name": "TestDefault",
      "configurePreset": "ConfigDefault",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ],
  "packagePresets": [
    {
      "name": "PackageDefault",
      "configurePreset": "ConfigDefault",
      "displayName": "Default Zip Package",
      "generators": [
        "ZIP"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "WorkflowDefault",
      "steps": [
        {
          "type": "configure",
          "name": "ConfigDefault"
        },
        {
          "type": "build",
          "name": "BuildDefault"
        },
        {
          "type": "test",
          "name": "TestDefault"
        },
        {
          "type": "package",
          "name": "PackageDefault"
        }
      ]
    }
  ]
}
